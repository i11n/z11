ul,
ol,
dl {
  theme({
    margin-top: settings-rhythm,
    margin-bottom: settings-rhythm,
  });  
}

ul,
ol {
  $local = {
    list-style: none,
  };
  $padding = 'padding-' + get-theme(left);
  $local[$padding] = settings-list-padding;
  theme($local);

  ul,
  ol {
    margin-bottom: 0;
  }
}

ol {
  ol-counter(1);
  ol {
    ol-counter(2);
    ol {
      ol-counter(3);
    }
  }
}

ul {
  ul-bullet(1);
  ul {
    ul-bullet(2);
    ul {
      ul-bullet(3);
    }
  }
}