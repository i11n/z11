theme-has-key($key) {
  return lookup('$z-theme-' + $key) != null;
}

theme-get-key($key) {
  return lookup('$z-theme-' + $key);
}

get-theme($token) {
  if theme-has-key($token) {
    return theme-get-key($token);
  }
  
  return $token;
}

fallback($primary, $secondary, $fallback) {
  if theme-has-key($primary) {
    return $primary;
  }
  if theme-has-key($secondary) {
    return $secondary;
  }

  return $fallback;
}
